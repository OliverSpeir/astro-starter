{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@assets/*": ["src/assets/*"],
			"@utils": ["src/assets/utils/index"],
		},
	},
	"exclude": ["dist/"],
}
